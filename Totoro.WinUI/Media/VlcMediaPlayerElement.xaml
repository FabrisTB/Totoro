<UserControl
    x:Class="Totoro.WinUI.Media.VlcMediaPlayerElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vlc="using:LibVLCSharp.Platforms.Windows"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <vlc:VideoView
            x:Name="VideoView"
            Grid.RowSpan="2"
            Initialized="VideoView_Initialized" />

        <ContentPresenter x:Name="ContentPresenter" Background="Transparent" />

        <ContentPresenter
            Grid.Row="1"
            Margin="0,3"
            Content="{x:Bind TransportControls}" />

    </Grid>
</UserControl>
